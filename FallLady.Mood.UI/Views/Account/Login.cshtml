@model LoginViewModel

<div id="main-wrapper">

    <!-- ========================== SignUp Elements ============================= -->
    <section class="log-space">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-11 col-md-11">
                    <div class="row no-gutters position-relative log_rads">
                        <div class="col-lg-12 col-md-12 position-static p-4">
                            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                <div class="log_wraps">
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.UserName, new { @class = "control-label" })<b class="text-danger"></b>
                                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "نام کاربری", required = "required", autofocus = "", maxlength = "20" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Password, new { @class = "control-label" })<b class="text-danger"></b>
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "کلمه عبور", required = "required", maxlength = "20" })
                                    </div>
                                    <div class="text-center">
                                        <button class="btn btn-theme-2 btnLogin">ورود</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ========================== Login Elements ============================= -->
</div>


