@using FallLady.Mood.Utility.Extentions.Datetime;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model FallLady.Mood.Application.Contract.Dto.Blogs.BlogDetailDto

<div class="content-wrapper  js-content-wrapper">


    <section data-anim="fade" class="breadcrumbs is-in-view">
        <div class="container">
            <div class="row">
                <div class="col-auto">
                    <div class="breadcrumbs__content">

                        <div class="breadcrumbs__item ">
                            <a href="#">صفحه اصلی</a>
                        </div>

                        <div class="breadcrumbs__item ">
                            <a href="#">لیست وبلاگ</a>
                        </div>

                        <div class="breadcrumbs__item ">
                            <a href="#">وبلاگ گرافیک</a>
                        </div>

                        <div class="breadcrumbs__item ">
                            <a href="#">فتوشاپ</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>


    <section class="page-header -type-1">
        <div class="container">
            <div class="page-header__content">
                <div class="row justify-center text-center">
                    <div class="col-auto">
                        <div data-anim="slide-up delay-1" class="is-in-view">

                            <h1 class="page-header__title lh-14">@Model.Title</h1>


                            <p class="page-header__text">@Model.CreatedOn.ToFa("D")</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <section class="layout-pt-md">
        <div class="container">
            <img class="ratio ratio-16:9 rounded-8 bg-image js-lazy loaded" data-ll-status="loaded" src="@Model.PicturePath"/>
        </div>
    </section>

    <section class="layout-pt-md layout-pb-lg">
        <div class="container">
            <div class="blogSection">
                <div class="blogCard">
                    <div class="row justify-center">
                        <div class="col-xl-8 col-lg-9 col-md-11">
                            <div class="blogCard__content">                                
                                @Html.Raw(Model.TextBody)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row justify-center pt-30">
                    <div class="col-xl-8 col-lg-9 col-md-11">
                        <div class="row y-gap-20 justify-between items-center">
                            <div class="col-auto">
                                <div class="d-flex items-center">
                                    <div class="lh-1 text-dark-1 fw-500 ml-30">اشتراک گذاری</div>

                                    <div class="d-flex x-gap-15">
                                        <a href="#">Fb</a>
                                        <a href="#">Tw</a>
                                        <a href="#">In</a>
                                        <a href="#">Ln</a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-auto">
                                <div class="row x-gap-10 y-gap-10">

                                    <div class="col-auto">
                                        <a href="#" class="badge -sm -light-3 text-11 text-dark-1">دوره آنلاین</a>
                                    </div>

                                    <div class="col-auto">
                                        <a href="#" class="badge -sm -light-3 text-11 text-dark-1">برنامه نویسی</a>
                                    </div>

                                    <div class="col-auto">
                                        <a href="#" class="badge -sm -light-3 text-11 text-dark-1">مهاجرت</a>
                                    </div>

                                    <div class="col-auto">
                                        <a href="#" class="badge -sm -light-3 text-11 text-dark-1">طراحی وب</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

</div>