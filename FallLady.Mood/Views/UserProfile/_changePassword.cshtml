@model FallLady.Mood.Application.Contract.Dto.Users.ChangePasswordDto

<div class="tabs__pane -tab-item-2">
    <form action="#" class="contact-form row y-gap-30">

        <div class="col-md-7">

            <label class="text-15 lh-1 fw-500 text-dark-1 mb-10">کلمه عبور فعلی</label>

            <input type="password" asp-for="OldPassword" placeholder="*********">
        </div>


        <div class="col-md-7">

            <label class="text-15 lh-1 fw-500 text-dark-1 mb-10">کلمه عبور جدید</label>

            <input type="password" asp-for="NewPassword" placeholder="*********">
        </div>


        <div class="col-md-7">

            <label class="text-15 lh-1 fw-500 text-dark-1 mb-10">تایید کلمه عبور جدید</label>

            <input type="password" asp-for="ConfirmNewPassword" placeholder="*********">
        </div>

        <div class="col-12">
            <a href="javascript:void(0)" data-url="@Url.Action("ChangePassword","Account")" class="button -md -purple-1 text-white btn-userSetting">
                <i class="ti-check"></i>
                ثبت تغییرات
            </a>
        </div>
    </form>
</div>