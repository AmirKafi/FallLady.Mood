@model FallLady.Mood.Application.Contract.Dto.Configs.ConfigDto
@{
    ViewData["Title"] = "تماس با ما";
}
<main class="main-content">

    <div class="content-wrapper  js-content-wrapper">

        <section class="page-header -type-4 bg-beige-1">
            <div class="container">
                <div class="page-header__content">
                    <div class="row">
                        <div class="col-auto">
                            <div data-anim="slide-up delay-1">
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="layout-pt-md layout-pb-lg">
            <div data-anim-wrap class="container">
                <div class="row y-gap-50 justify-between">
                    <div class="col-xl-5 col-lg-6">
                        <h3 class="text-24 lh-1 fw-500 ff-estedad">راه ارتباط با بانوی پاییز</h3>
                        <div class="row y-gap-30 pt-40">

                            <div class="col-sm-6">
                                <div class="text-20 fw-500 text-dark-1">تهران</div>
                                <div class="y-gap-10 pt-15">
                                    <a href="#" class="d-block">@Model.Address</a>
                                    <a href="#" class="d-block">@Model.ContactNumber</a>
                                    <a href="#" class="d-block">@Model.Email</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="px-40 py-40 bg-white border-light shadow-1 rounded-8 contact-form-to-top">
                            <h3 class="text-24 fw-500 ff-estedad">با ما در ارتباط باشید</h3>

                            <form class="contact-form row y-gap-30 pt-60 lg:pt-40" action="#">
                                <div class="col-12">
                                    <label class="text-16 lh-1 fw-500 text-dark-1 mb-10">نام</label>
                                    <input type="text" name="title" placeholder="نام شما">
                                </div>
                                <div class="col-12">
                                    <label class="text-16 lh-1 fw-500 text-dark-1 mb-10">ایمیل</label>
                                    <input type="text" name="title" placeholder="ایمیل معتبر">
                                </div>
                                <div class="col-12">
                                    <label class="text-16 lh-1 fw-500 text-dark-1 mb-10">پیام</label>
                                    <textarea name="comment" placeholder="متن پیام" rows="8"></textarea>
                                </div>
                                <div class="col-12">
                                    <button type="submit" name="submit" id="submit" class="button -md -purple-1 text-white">
                                        ارسال
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
</main>