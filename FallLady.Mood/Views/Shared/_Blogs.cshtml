@using FallLady.Mood.Utility.Extentions.Datetime;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model List<FallLady.Mood.Application.Contract.Dto.Blogs.BlogListDto>

<section class="layout-pt-lg layout-pb-lg">
    <div data-anim-wrap class="container">
        <div data-anim-child="slide-left delay-1" class="row y-gap-20 justify-between items-center">
            <div class="col-lg-6">

                <div class="sectionTitle ">

                    <h2 class="sectionTitle__title ">منابع و اخبار</h2>
                </div>

            </div>

            <div class="col-auto">

                <a href="#" class="button -icon -purple-3 text-purple-1">
                    مشاهده همه
                    <i class="icon-arrow-top-right text-13 mr-10"></i>
                </a>

            </div>
        </div>

        <div class="row y-gap-30 pt-50">

            @foreach (var item in Model.Take(2))
            {
                <div data-anim-child="slide-left delay-2" class="col-lg-4 col-md-6">
                    <a href="blog-single.html" class="blogCard -type-1">
                        <div class="blogCard__image">
                            <img src="@item.PicturePath" alt="image">
                        </div>
                        <div class="blogCard__content">
                            <h4 class="blogCard__title">@item.Title</h4>
                            <div class="blogCard__date">@item.CreatedOn.ToFa("D")</div>
                        </div>
                    </a>
                </div>
            }


            <div class="col-lg-4">
                <div class="row y-gap-30">

                    @foreach (var item in Model.Skip(2).Take(3))
                    {
                        <div class="col-lg-12 col-md-6">
                            <a href="#" data-anim-child="slide-left delay-4" class="blogCard -type-2">
                                <div class="blogCard__image">
                                    <img src="@item.PicturePath" alt="image">
                                </div>
                                <div class="blogCard__content">
                                    <h4 class="blogCard__title">@item.Title</h4>
                                    <div class="blogCard__date">@item.CreatedOn.ToFa("D")</div>
                                </div>
                            </a>
                        </div>
                    }    

                </div>
            </div>
        </div>
    </div>
</section>