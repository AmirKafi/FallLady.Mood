@using FallLady.Mood.Framework.Core.Enum;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    <ul class="nav-menu nav-menu-social align-to-left">
        @if (User.Identity.IsAuthenticated)
        {

            if (User.HasClaim("UserRole", "Admin"))
            {
                <li class="login_click bg-red">
                    <a asp-action="Index" asp-area="Admin" class="btn">ورود به پنل ادمین</a>
                </li>
            }

            <li class="login_click bg-red">
                <a href="javascript:void(0)" data-url="@Url.Action("SignOut","Account")" class="btn signOut">خروج</a>
            </li>


        }
        else
        {
            <li class="login_click bg-red">
                <a href="javascript:void(0)" data-url="@Url.Action("Login","Account")" data-dialog-mode="medium" class="btn modalRaw">ورود</a>
            </li>
            <li class="login_click bg-blue">
                <a href="javascript:void(0)" data-url="@Url.Action("Register","Account")" data-dialog-mode="large" class="btn modalRaw">ثبت نام</a>
            </li>
        }
    </ul>
}
