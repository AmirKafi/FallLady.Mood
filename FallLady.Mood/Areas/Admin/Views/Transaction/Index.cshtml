@{
    ViewBag.Title = "لیست پرداختی ها";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div id="toolbar">
                        <a href="javascript:void(0)" data-url="" class="btn btn-outline-dark m-1 refresh"><span class="glyphicon glyphicon-refresh"></span> بروزرسانی</a>
                    </div>
                    <table class="table text-nowrap mb-0 align-middle"
                           data-toolbar="#toolbar"
                           data-toggle="table"
                           data-striped="true"
                           data-show-refresh="false"
                           data-id-field="id"
                           data-height="420"
                           data-click-to-select="true"
                           data-side-pagination="server"
                           data-pagination="true"
                           data-buttons-align="right"
                           data-single-select="true"
                           data-toolbar-align="right"
                           data-naseri-additional-params="window.transactionAdditionalParams"
                           data-ajax="window.ajaxRequest"
                           data-response-handler="window.responseHandler"
                           data-confirmation-url="@Url.Action("Confirmation", "Transaction")"
                           data-url="@Url.Action("LoadTransactions", "Transaction")">
                        <thead>
                            <tr>
                                <th data-field="state" data-width="1" data-checkbox="true" data-halign="center" data-align="center"></th>
                                <th data-field="rowNumber" data-width="1">ردیف</th>
                                <th data-field="ordersTitle" data-width="1000">محصولات شامل</th>
                                <th data-field="totalPrice" data-width="1000">مبلغ کل</th>
                                <th data-field="discountPrice" data-width="1000">مبلغ تخفیف</th>
                                <th data-field="payablePrice" data-width="1000">مبلغ پرداختی</th>
                                <th data-field="paymentStateTitle" data-width="1000">وضعیت پرداخت</th>
                                <th data-field="createdOnFa" data-width="1000">تاریخ ثبت</th>
                                <th data-field="filePath" data-width="1000" data-formatter="window.showImageFormatter" data-events="window.showImageEvents">رسید</th>
                                <th data-field="paymentState" data-width="1000" data-formatter="window.transactionConfirmationFormatter" data-events="window.transactionConfirmationEvents">تایید/عدم تایید</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>