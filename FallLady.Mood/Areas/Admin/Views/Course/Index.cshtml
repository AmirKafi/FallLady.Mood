@{
    ViewBag.Title = "لیست دوره";
}
<div class="container-fluid lqd-animation">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div id="toolbar">
                        <a href="javascript:void(0)" data-url="@Url.Action("Create","Course")" class="btn btn-primary createItem"><span class="glyphicon glyphicon-plus"></span> افزودن</a>
                        <a href="javascript:void(0)" data-url="" class="btn btn-dark refresh"><span class="glyphicon glyphicon-refresh"></span> بروزرسانی</a>
                    </div>
                    <table class="table text-nowrap mb-0 align-middle"
                           data-toolbar="#toolbar"
                           data-toggle="table"
                           data-striped="true"
                           data-show-refresh="false"
                           data-id-field="courseId"
                           data-height="420"
                           data-click-to-select="true"
                           data-side-pagination="server"
                           data-pagination="true"
                           data-buttons-align="right"
                           data-single-select="true"
                           data-toolbar-align="right"
                           data-naseri-additional-params="window.courseAdditionalParams"
                           data-ajax="window.ajaxRequest"
                           data-response-handler="window.responseHandler"
                           data-url="@Url.Action("LoadCourses","Course")">
                        <thead>
                            <tr>
                                <th data-field="state" data-width="1" data-checkbox="true" data-halign="center" data-align="center"></th>
                                <th data-field="rowNumber" data-width="1000">ردیف</th>
                                <th data-field="title" data-width="1000">عنوان دوره</th>
                                <th data-field="courseTypeTitle" data-width="1000">نوع دوره</th>
                                <th data-field="price" data-width="1000">قیمت</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>