<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/templateAssets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Content/Image/Hico Logo.png">
    <title>
        @ViewBag.Title
    </title>
    <!-- CSS Files -->
    <link href="~/Content/css/base.css" rel="stylesheet" />
    <link href="~/css/toastr.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
</head>

<body class="g-sidenav-show rtl bg-gray-200">
    @RenderSection("Menu", required: false)
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg overflow-x-hidden">
        <!-- Navbar -->
        <!-- End Navbar -->
        <div class="hico-header-background"></div>
        <div class="container-fluid py-4">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </main>
    <script src="~/Content/js/base.js"></script>
    <script src="~/Content/js/home.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
